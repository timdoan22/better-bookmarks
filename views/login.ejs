<%- include('partials/header') -%>
<body>
  <div class="login-root">
    <div class="box-root flex-flex flex-direction--column form-section">
      <div class="loginbackground box-background--white padding-top--64">
        <div class="loginbackground-gridContainer">
          <div class="box-root flex-flex form-box">
            <div class="box-root">
            </div>
          </div>
        </div>
      </div>
      <div class="box-root padding-top--24 flex-flex flex-direction--column login-title">
        <div class="box-root padding-top--48 padding-bottom--24 flex-flex flex-justifyContent--center title-heading-login">
          <h1 class="form-title">Better Bookmarks</h1>
        </div>
          <div class="formbg">
            <div class="formbg-inner padding-horizontal--48">
              <span class="padding-bottom--15 notice-heading form-span">Sign in to your account</span>
              <!-- flash any error messages for login -->
              <% if (locals.messages.errors) 
                { %> <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %> 
              <% } %> 
              <% if (locals.messages.info) { %> 
                  <% messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                  <% }) %> 
              <% } %>
              <form id="stripe-login" action="/login" method="POST">
                <div class="field padding-bottom--24">
                  <label for="exampleInputEmail1">Email</label>
                  <input 
                    type="email"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                    name="email"
                  />
                </div>
                <div class="field padding-bottom--24">
                  <div class="grid--50-50">
                    <label for="exampleInputPassword1">Password</label>
                  </div>
                  <input 
                    type="password"
                    class="form-control"
                    id="exampleInputPassword1"
                    name="password"
                  />
                </div>
                <div class="field padding-bottom--24 submit-input">
                  <input type="submit" class="btn btn-primary submit-button" value="Login"></input>
                </div>
                <div class="field">
                  <a class="ssolink" href="/google"><span class="google-text">Login with Google</span></a>
                </div>
              </form>
            </div>
          </div>
          <div class="footer-link padding-top--24">
            <span class="form-span">Don't have an account? <a href="/signup">Sign up</a></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include('partials/footer') -%>
